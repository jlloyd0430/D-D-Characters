  <title>
    <%= Character.name %>
  </title>
  <style>
     body {
      font-family: Arial, sans-serif;
      background-color: black;
      font-family: 'Yeon Sung', cursive;
      /* margin: auto; */
      /* text-align: center; */
    }

nav {
	height: 85px;
	border-bottom: solid rgb(203, 84, 24);
   font-size: 24px;
   
}

   nav a {
      text-decoration: none;
      color: rgb(203, 84, 24);
      margin-top: 25px;
      float: right;
    }

    a {
      text-decoration: none;
      color: rgb(203, 84, 24);
      margin: 15px;
     
      
    }
 

nav :hover {
  color: #fff;
}

nav h1 {

	font-size: 40px;
	margin: 20px;
	/* margin-top: 20px; */
	display: inline-block;
  color: #fff;
  
}

    h1 {
      font-size: 36px;
      text-align: center;
      color: #6439b9;
      margin: 10px;
    }

    h2 {
      font-size: 24px;
      color: #666666;
      margin: 10px;
    }

    .character {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .character-card {
      margin: auto;
      border-radius: 11px;
      width: 300px;
      height: 400px;
      background-color: #fff;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      margin: 20px;
      overflow: hidden;
    }

    .character-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .character-card h3 {
      font-size: 18px;
      text-align: center;
      margin: 10px;
    }

    .character-card p {
      font-size: 14px;
      margin: 10px;
    }

    .character-card button {
      background-color: #ff0000;
      color: #ffffff;
      font-size: 14px;
      padding: 8px 16px;
      border: none;
      cursor: pointer;
      margin: 10px;
    }

    .character-card button:hover {
      background-color: #ff6666;
    }

    input {
      text-align: center;
      margin: 15px;
    }

   
  </style>
</head>

<nav>
  <!-- <a class="menu-icon" href="#">&#9776;</a> -->

  <h1>D&D.io</h1>
  <!-- <div class="nav-buttons"></div> -->
  <a class="nav-buttons" href="/allChars">All</a>
  <a class="nav-buttons" href="/createChar">Create</a>
  <a class="nav-buttons" href="/">Home</a>
  <!-- </div> -->
</nav>

<body>
  <!-- Takes clients back to the entire collection -->
  <a href="/allChars">Back to all Characters</a>

  <div class="character-card">
    <h1>
      ID # <%= Character.id %>
    </h1>
    <h2>
      Name: <%= Character.name %>
    </h2>
    <h3>
      Class: <%= Character.class %>
    </h3>
    <h3>
      Level: <%= Character.level %>
    </h3>
      <h3>
        Race: <%= Character.race %>
      </h3>
    
  

    <a href="/updateChar/<%=Character.name%>" style="margin: auto;">Update This Character</a>
    <br>
    <br>
      <% if(loggedIn && !userFaves.includes(Character._id)) { %>
        <form action="/api/user/addFavoriteCharacter?_method=PUT" method="post">
            <input type="hidden" name="charId" value="<%=Character._id%>"> 
            <input type="submit" name="_method" value="Add this Character to Favorites">
        </form>
    <% } %>

    <form action="/api/Character/deleteOneCharacter/<%=Character.name%>?_method=DELETE" method="post" style="margin-top: 15px;">
      <input type="submit" name="_method" value="DELETE THIS CHARACTER">
    </form>
</body>

</html>